{
    "debug": true,
    "delay": 0.25,
    "error_color": "D02000",
    "gutter_theme": "Packages/SublimeLinter/gutter-themes/Default/Default.gutter-theme",
    "gutter_theme_excludes": [],
    "lint_mode": "background",
    "linters": {
        "csslint": {
            "@disable": false,
            "args": [],
            "errors": "",
            "excludes": [],
            "ignore": "",
            "warnings": ""
        },
        "eslint": {
            "@disable": false,
            "args": [],
            "excludes": [
                "**/node_modules/**",
                "**/vendor/**"
            ]
        },
        "htmlhint": {
            "@disable": false,
            "args": [],
            "excludes": []
        },
        "htmllint": {
            "@disable": false,
            "args": [],
            "excludes": []
        },
        "htmltidy": {
            "@disable": false,
            "args": [],
            "excludes": []
        },
        "jshint": {
            "@disable": false,
            "args": [
                "boss: false",
                "curly: true",
                "eqeqeq: false",
                "eqnull: true",
                "expr: true",
                "immed: true",
                "latedef: true",
                "noarg: true",
                "node: true",
                "quotmark: 'double'",
                "smarttabs: true",
                "trailing: true",
                "undef: true",
                "unused: true"
            ],
            "excludes": []
        },
        "json": {
            "@disable": false,
            "args": [],
            "excludes": [],
            "strict": true
        },
        "php": {
            "@disable": false,
            "args": [],
            "excludes": []
        },
        "phpcs": {
            "@disable": false,
            "args": [
                "-n"
            ],
            "excludes": [
                "*.phtml",
                "*.twig"
            ],
            "standard": "PSR2"
        },
        "phplint": {
            "@disable": false,
            "args": [
                "--print-errors",
                "--print-warnings",
                "--print-notices",
                "--ascii-ext-check",
                "--ctrl-check",
                "--recursive",
                "--no-print-file-name",
                "--parse-phpdoc",
                "--print-context",
                "--print-source",
                "--print-line-numbers",
                "--report-unused"
            ],
            "excludes": []
        },
        "phpmd": {
            "@disable": false,
            "args": [],
            "excludes": [],
            "rulesets": "cleancode,codesize,controversial,design,naming,unusedcode"
        },
        "sass": {
            "@disable": false,
            "args": [],
            "excludes": []
        },
        "scss": {
            "@disable": true,
            "args": [],
            "exclude-linter": "",
            "excludes": [],
            "include-linter": ""
        },
        "stylelint": {
            "@disable": false,
            "args": [],
            "excludes": []
        },
        "tslint": {
            "@disable": false,
            "args": [],
            "config_filename": "tslint.json",
            "excludes": [
                "**/node_modules/**"
            ]
        }
    },
    "mark_style": "solid underline",
    "no_column_highlights_line": false,
    "passive_warnings": false,
    "paths": {
        "linux": [],
